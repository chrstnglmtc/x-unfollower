{
  "manifest_version": 3,
  "name": "X Unfollower",
  "version": "2.0",
  "description": "Load, select, and bulk unfollow from your Following list on X.",
  "permissions": ["scripting", "activeTab", "storage", "notifications"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["https://x.com/*/following*", "https://twitter.com/*/following*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ]
}
